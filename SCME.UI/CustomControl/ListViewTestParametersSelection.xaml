                        <Label Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Margin="5,10" Content="ATU" />

                        <Grid Margin="10" Grid.Column="1" Visibility="{Binding IsEnabled, Converter={StaticResource B2V}}">
