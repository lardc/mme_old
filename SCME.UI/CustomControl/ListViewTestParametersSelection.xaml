                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85*" />
                                <ColumnDefinition Width="15*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" Content="{x:Static res:Resources.RACResVoltage}" />
                            <Label Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Content="{Binding ResVoltage, UpdateSourceTrigger=PropertyChanged}" />

