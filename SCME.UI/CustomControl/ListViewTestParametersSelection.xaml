                                           Content="{Binding RampOpeningCurrent }"
                                           Visibility="{Binding IsRampOpeningEnabled, Converter={StaticResource B2V} }" />

                                    <Label Grid.Column="3" Grid.Row="2" Margin="0,0,0,0"
