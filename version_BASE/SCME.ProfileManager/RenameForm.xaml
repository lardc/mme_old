<Window x:Class="SCME.ProfileManager.RenameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="renameForm"
        Title="Переименовать..." Height="170" Width="360" WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Activated="RenameForm_OnActivated">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textBox" Grid.Row="1" Margin="18" Grid.ColumnSpan="3" Text="{Binding ElementName=renameForm, Path=TextValue}" TabIndex="0" AutoWordSelection="True"/>
        <Button Grid.Row="2" Grid.Column="1" Content="OK" Margin="5" IsDefault="True" TabIndex="1" Click="BtnOk_OnClick"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Отмена" Margin="5" IsCancel="True" TabIndex="2"/>
    </Grid>
</Window>
