                            <Label Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right" Content="{Binding OffStateVoltage, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Mode, ConverterParameter=OffStateVoltage, Converter={StaticResource QrrTqM2V}, UpdateSourceTrigger=PropertyChanged}" />

